<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
<<<<<<< HEAD
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zama.Views.ProfilePage"
             Title="My Profile">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Frame BorderColor="Gray" Padding="15">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                     ColumnDefinitions="Auto,*" 
                     RowSpacing="10" 
                     ColumnSpacing="15">

                    <Label Text="Name:" FontAttributes="Bold"/>
                    <Label Text="{Binding CurrentUser.Name}" Grid.Column="1"/>

                    <Label Text="Email:" FontAttributes="Bold" Grid.Row="1"/>
                    <Label Text="{Binding CurrentUser.Email}" Grid.Row="1" Grid.Column="1"/>

                    <Label Text="Phone:" FontAttributes="Bold" Grid.Row="2"/>
                    <Label Text="{Binding CurrentUser.PhoneNumber}" Grid.Row="2" Grid.Column="1"/>

                    <Label Text="Loyalty Points:" FontAttributes="Bold" Grid.Row="3"/>
                    <Label Text="{Binding CurrentUser.LoyaltyPoints}" Grid.Row="3" Grid.Column="1"/>
                </Grid>
            </Frame>

            <Label Text="My Reservations" 
                  FontSize="20" 
                  FontAttributes="Bold"/>

            <CollectionView ItemsSource="{Binding UserReservations}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="10">
                            <Grid RowDefinitions="Auto,Auto,Auto" 
                                 ColumnDefinitions="Auto,*" 
                                 RowSpacing="5">

                                <Label Text="Date:" FontAttributes="Bold"/>
                                <Label Text="{Binding ReservationDate, StringFormat='{0:d}'}" 
                                      Grid.Column="1"/>

                                <Label Text="Time:" FontAttributes="Bold" Grid.Row="1"/>
                                <Label Text="{Binding ReservationTime, StringFormat='{0:t}'}" 
                                      Grid.Row="1" Grid.Column="1"/>

                                <Label Text="Guests:" FontAttributes="Bold" Grid.Row="2"/>
                                <Label Text="{Binding NumberOfGuests}" 
                                      Grid.Row="2" Grid.Column="1"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
