<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Zama.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Zama.Views"
       Shell.FlyoutBehavior="Disabled">
    
    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="MainPage" />
        </Tab>

        <Tab Title="Menu" Icon="menu.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:MenuPage}"
                Route="MenuPage" />
        </Tab>

        <Tab Title="Reservations" Icon="calendar.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:ReservationsPage}"
                Route="ReservationsPage" />
        </Tab>

        <Tab Title="Profile" Icon="profile.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:ProfilePage}"
                Route="ProfilePage" />
        </Tab>
    </TabBar>

</Shell>
